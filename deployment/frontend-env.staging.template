# TMS Client Staging Environment Configuration
# Copy this file to /home/tmsapp/tms-client/.env.staging.local
# NOTE: This file should be created on the server, NOT committed to git

# ============================================
# API Configuration
# ============================================
# These point to the same domain - Nginx will route /api/* to backend
NEXT_PUBLIC_API_URL=https://tms-chat-staging.example.com/api
NEXT_PUBLIC_WS_URL=wss://tms-chat-staging.example.com/ws

# ============================================
# GCGC User Management System
# ============================================
# IMPORTANT: Update with your actual GCGC staging URL
NEXT_PUBLIC_TEAM_MANAGEMENT_API_URL=https://tms-staging.example.com
NEXT_PUBLIC_GCGC_LOGIN_URL=https://tms-staging.example.com/auth/signin

# ============================================
# NextAuth Configuration
# ============================================
# CRITICAL: This MUST match the backend's JWT_SECRET and GCGC staging's NEXTAUTH_SECRET
NEXTAUTH_SECRET=your_gcgc_staging_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=https://tms-chat-staging.example.com

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production  # Still "production" for build optimization, but points to staging APIs
NEXT_PUBLIC_APP_NAME=TMS Chat (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0-staging

# ============================================
# Development Features (Enabled in staging)
# ============================================
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# ============================================
# Feature Flags (Optional)
# ============================================
# NEXT_PUBLIC_ENABLE_VOICE_CALLS=true
# NEXT_PUBLIC_ENABLE_VIDEO_CALLS=true
# NEXT_PUBLIC_ENABLE_POLLS=true
# NEXT_PUBLIC_ENABLE_FILE_UPLOADS=true
# NEXT_PUBLIC_MAX_FILE_SIZE=104857600  # 100MB

# ============================================
# Analytics (Optional - Disabled in staging)
# ============================================
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_HOTJAR_ID=
# NEXT_PUBLIC_MIXPANEL_TOKEN=

# ============================================
# Error Tracking (Optional)
# ============================================
# Use separate Sentry project for staging
